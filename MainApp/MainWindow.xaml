<Window x:Class="MainApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:MainApp.UserControls"
        xmlns:local="clr-namespace:MainApp"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="MainWindow" Height="450" Width="800"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="White" CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <uc:NavMenu Grid.Column="0" Grid.Row="1"/>
            <Border Grid.Column="0" Grid.Row="1" Margin="10,10,10,10" ></Border>
            <Border Grid.Column="1" Grid.Row="1" Margin="10,10,10,10" ></Border>
        </Grid>    
    </Border>
</Window>
